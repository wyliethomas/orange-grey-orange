<h1>Users</h1>

<table class="table">
<% for user in @users %>
  <tr>
    <td>
      <%= link_to user.name, admin_users_path(user.id) %>
    </td>
    <td align="right">
      <%= link_to "edit", edit_admin_user_path(user.id), :class => 'btn btn-primary btn-xs' %> 
      <%= button_to "delete", admin_user_path(user.id), :method=>:delete, :class=> 'btn btn-primary btn-xs', :form_class => 'form-delete' %>
    </td>
  </tr>
<% end %>
</table>

