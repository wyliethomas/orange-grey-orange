<h1>Pages</h1>

<table class="table">
<% for page in @pages %>
  <tr>
    <td>
      <%= link_to page.title, admin_pages_path(page.id) %>
    </td>
    <td align="right">
      <%= link_to "edit", edit_admin_page_path(page.id), :class => 'btn btn-primary btn-xs' %> 
      <%= button_to "delete", admin_page_path(page.id), :method=>:delete, :class=> 'btn btn-primary btn-xs', :form_class => 'form-delete' %>
    </td>
  </tr>
<% end %>
</table>

